{
  "extends": "./tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "tsBuildInfoFile": "./dist/main.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "**/node_modules/.pnpm/**/*",
    "**/dist",
    "**/build/**/*",
    "**/documentation",
    "**/.cursor/**",
    "**/examples/**/*",
    "*.md"
  ],
  "files": ["./eslint.config.js", "./prettier.config.js"],
  "include": ["./config/**/*.ts"],
  "references": [
    { "path": "packages/core" },
    { "path": "apps/cli" },
    { "path": "apps/obsidian-plugin" },
    { "path": "apps/vscode" }
  ]
}
