{
  "extends": "@magus-mark/typescript-config/config/base/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./config/**/*.ts", "./tools/scripts/**/*.ts"],
  "exclude": [
    "config/eslint/**/*",
    "node_modules",
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/node_modules/.pnpm/**/*"
  ],
  "references": [
    { "path": "./packages/core/tsconfig.json" },
    { "path": "./apps/cli/tsconfig.json" },
    { "path": "./apps/obsidian-plugin/tsconfig.json" },
    { "path": "./apps/vscode/tsconfig.json" }
  ]
}
