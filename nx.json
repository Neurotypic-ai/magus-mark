{
  "$schema": "./node_modules/nx/schemas/workspace-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "projectSettings": {
    "packages/core": {
      "tags": ["core", "shared"],
      "implicitDependencies": [],
      "namedInputs": {
        "production": ["default"],
        "test": ["default", "{projectRoot}/src/**/*.test.ts"]
      }
    },
    "apps/cli": {
      "tags": ["app", "cli"],
      "implicitDependencies": ["packages/core"],
      "namedInputs": {
        "production": ["default"],
        "test": ["default", "{projectRoot}/src/**/*.test.ts"]
      }
    },
    "apps/obsidian-plugin": {
      "tags": ["app", "obsidian"],
      "implicitDependencies": ["packages/core"],
      "namedInputs": {
        "production": ["default"],
        "test": ["default", "{projectRoot}/src/**/*.test.ts", "{projectRoot}/src/**/*.test.tsx"]
      }
    },
    "apps/vscode": {
      "tags": ["app", "vscode"],
      "implicitDependencies": ["packages/core"],
      "namedInputs": {
        "production": ["default"],
        "test": ["default", "{projectRoot}/src/**/*.test.ts", "{projectRoot}/src/**/*.test.tsx"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "bundle-analysis": {
      "dependsOn": ["^bundle-analysis"],
      "cache": true
    },
    "check-accessibility": {
      "dependsOn": ["^check-accessibility"],
      "cache": true
    },
    "package": {
      "dependsOn": ["^package"],
      "cache": true
    },
    "prebuild": {
      "dependsOn": ["^prebuild"]
    },
    "prerelease": {
      "dependsOn": ["^prerelease"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "vscode:prepublish": {
      "dependsOn": ["^vscode:prepublish"]
    },
    "clean": {
      "cache": true
    },
    "format": {
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "vite:test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "nxCloudId": "67fc673de94071427fe19ac7",
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "default": ["sharedGlobals"]
  }
}
