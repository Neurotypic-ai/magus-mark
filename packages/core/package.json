{
  "name": "@obsidian-magic/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "fs-extra": "^11.3.0",
    "openai": "^4.93.0",
    "ora": "^8.2.0",
    "tiktoken": "^1.0.20",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.mjs",
      "require": "./dist/src/index.js"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "import": "./dist/src/*.mjs",
      "require": "./dist/src/*.js"
    }
  }
}
