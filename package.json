{
  "author": "Kevin Hallmark <obsdian-magic@littleblackhat.com>",
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@eslint/markdown": "^6.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@nx/eslint": "20.8.0",
    "@nx/vite": "20.8.0",
    "@nx/web": "20.8.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@typescript-eslint/utils": "^8.30.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import-x": "^4.10.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "jiti": "2.4.2",
    "nx": "20.8.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.8.0"
  },
  "license": "MIT",
  "name": "obsidian-magic",
  "packageManager": "pnpm@10.8.0",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "build:cli": "tsc -b apps/cli",
    "build:core": "tsc -b packages/core",
    "build:obsidian": "tsc -b apps/obsidian-plugin",
    "build:vscode": "tsc -b apps/vscode",
    "clean": "tsc -b --clean",
    "clean:all": "rm -rf dist && pnpm -r exec -- rm -rf dist && rm -rf node_modules && pnpm -r exec -- rm -rf node_modules",
    "dev": "tsc -b --watch",
    "dev:cli": "tsc -b apps/cli --watch",
    "dev:core": "tsc -b packages/core --watch",
    "dev:obsidian": "tsc -b apps/obsidian-plugin --watch",
    "dev:vscode": "tsc -b apps/vscode --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:cli": "cd apps/cli && eslint .",
    "lint:core": "cd packages/core && eslint .",
    "lint:obsidian": "cd apps/obsidian-plugin && eslint .",
    "lint:vscode": "cd apps/vscode && eslint .",
    "lint:docs": "cd documentation && eslint .",
    "lint:all": "pnpm lint:cli && pnpm lint:core && pnpm lint:obsidian && pnpm lint:vscode && pnpm lint:docs",
    "test": "pnpm -r test",
    "test:cli": "vitest run --config apps/cli/vitest.config.ts",
    "test:core": "vitest run --config packages/core/vitest.config.ts",
    "test:obsidian": "vitest run --config apps/obsidian-plugin/vitest.config.ts",
    "test:vscode": "vitest run --config apps/vscode/vitest.config.ts",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "magus-mcp": "node -e \"require('child_process').spawn(process.platform === 'win32' ? 'node_modules\\.bin\\magus-mcp.exe' : 'node_modules/.bin/magus-mcp', process.argv.slice(2), {stdio: 'inherit'})\"",
    "build:magus-mcp": "cd tools/magus-mcp && go build -o magus-mcp",
    "postinstall": "node tools/scripts/build-magus-mcp.js"
  },
  "type": "module",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
