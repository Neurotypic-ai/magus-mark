  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@eslint/markdown": "^6.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@nx/eslint": "20.7.2",
    "@nx/vite": "20.7.2",
    "@nx/web": "20.7.2",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@typescript-eslint/utils": "^8.29.1",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import-x": "^4.10.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "jiti": "2.4.2",
    "nx": "20.7.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.0.0",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.8.0"
  },
  "license": "MIT",
  "name": "obsidian-magic",
  "packageManager": "pnpm@10.8.0",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "dev": "tsc -b --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "magus-mcp": "node -e \"require('child_process').spawn(process.platform === 'win32' ? 'node_modules\\.bin\\magus-mcp.exe' : 'node_modules/.bin/magus-mcp', process.argv.slice(2), {stdio: 'inherit'})\"",
    "test": "pnpm -r test",
    "build:magus-mcp": "cd tools/magus-mcp && go build -o magus-mcp",
    "postinstall": "node tools/scripts/build-magus-mcp.js"
  },
  "type": "module",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {}
}
