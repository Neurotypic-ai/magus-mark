{
  "compilerOptions": {
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}",
    "types": ["node"]
  },
  "exclude": [
    "${configDir}/eslint.config.js",
    "${configDir}/**/node_modules",
    "${configDir}/**/node_modules/**/*",
    "${configDir}/**/dist",
    "${configDir}/**/dist/**/*",
    "${configDir}/**/build",
    "${configDir}/**/build/**/*",
    "${configDir}/**/documentation",
    "${configDir}/**/.cursor/**",
    "${configDir}/**/examples/**/*",
    "${configDir}/**/node_modules/.pnpm/**/*"
  ],
  "extends": "./settings.json",
  "references": [
    {
      "path": "${configDir}/tsconfig.build.json"
    },
    {
      "path": "${configDir}/tsconfig.test.json"
    },
    {
      "path": "${configDir}/../../packages/core"
    }
  ],
  "watchOptions": {
    "excludeDirectories": ["${configDir}/**/node_modules/**/*", "${configDir}/**/dist/**/*"],
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents"
  }
}
