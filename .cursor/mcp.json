{
  "mcpServers": {
    "nx-mcp": {
      "url": "http://localhost:9393/sse"
    },
    "git": {
      "command": "./scripts/start-mcp.sh",
      "args": ["--runner", "npx", "--server-name", "git", "--image-package", "mcp-server-git", "--network", "host"]
    },
    "github": {
      "command": "./scripts/start-mcp.sh",
      "args": [
        "--runner",
        "docker",
        "--server-name",
        "github",
        "--image-package",
        "ghcr.io/github/github-mcp-server:latest",
        "--env",
        "GITHUB_TOKEN",
        "--network",
        "host"
      ]
    },
    "filesystem": {
      "command": "./scripts/start-mcp.sh",
      "args": [
        "--runner",
        "npx",
        "--server-name",
        "filesystem",
        "--image-package",
        "@modelcontextprotocol/server-filesystem",
        "--mount",
        ".",
        "/workspace",
        "--network",
        "host",
        "/workspace"
      ]
    },
    "memory": {
      "command": "./scripts/start-mcp.sh",
      "args": [
        "--runner",
        "npx",
        "--server-name",
        "memory",
        "--image-package",
        "@modelcontextprotocol/server-memory",
        "--network",
        "host"
      ]
    },
    "sequential-thinking": {
      "command": "./scripts/start-mcp.sh",
      "args": [
        "--runner",
        "npx",
        "--server-name",
        "sequential-thinking",
        "--image-package",
        "@modelcontextprotocol/server-sequential-thinking",
        "--network",
        "host"
      ]
    },
    "obsidian": {
      "command": "./scripts/start-mcp.sh",
      "args": [
        "--runner",
        "npx",
        "--server-name",
        "obsidian",
        "--image-package",
        "mcp-obsidian",
        "--env",
        "{\"OBSIDIAN_API_KEY\":\"$OBSIDIAN_API_KEY\",\"OBSIDIAN_HOST\":\"$OBSIDIAN_HOST\"}",
        "--network",
        "host"
      ]
    }
  }
}
