{
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "magus-mark.tagFile",
        "title": "Magus Mark: Tag Current File"
      },
      {
        "command": "magus-mark.openTagExplorer",
        "title": "Magus Mark: Open Tag Explorer"
      },
      {
        "command": "magus-mark.cursorTagFile",
        "title": "Magus Mark: Tag with Cursor AI"
      },
      {
        "command": "magus-mark.cursorRegisterVSCodeParticipant",
        "title": "Magus Mark: Register @magus-mark Participant"
      },
      {
        "command": "magus-mark.queryVSCode",
        "title": "Magus Mark: Ask @magus-mark a Question"
      },
      {
        "command": "magus-mark.addTag",
        "title": "Magus Mark: Add New Tag"
      },
      {
        "command": "magus-mark.deleteTag",
        "title": "Magus Mark: Delete Tag"
      },
      {
        "command": "magus-mark.manageVaults",
        "title": "Magus Mark: Manage Vaults"
      },
      {
        "command": "magus-mark.addVault",
        "title": "Magus Mark: Add Vault"
      },
      {
        "command": "magus-mark.removeVault",
        "title": "Magus Mark: Remove Vault"
      },
      {
        "command": "magus-mark.syncVault",
        "title": "Magus Mark: Sync Vaults"
      },
      {
        "command": "magus-mark.openKnowledgeGraph",
        "title": "Magus Mark: Open Knowledge Graph"
      },
      {
        "command": "magus-mark.openTagDashboard",
        "title": "Magus Mark: Open Tag Dashboard"
      },
      {
        "command": "magus-mark.searchTags",
        "title": "Magus Mark: Search Tags"
      },
      {
        "command": "magus-mark.taggedFilesList",
        "title": "Magus Mark: Show Tagged Files"
      }
    ],
    "configuration": {
      "properties": {
        "obsidianMagic.cursorFeatures.enabled": {
          "default": true,
          "description": "Enable Cursor-specific features like @magus-mark participant",
          "type": "boolean"
        },
        "obsidianMagic.cursorFeatures.mcpServerPort": {
          "default": 9876,
          "description": "Port for the Model Context Protocol server",
          "type": "number"
        },
        "obsidianMagic.vault.autoDetect": {
          "default": true,
          "description": "Automatically detect Obsidian vaults in workspace",
          "type": "boolean"
        },
        "obsidianMagic.vault.autoSync": {
          "default": true,
          "description": "Automatically sync with Obsidian vaults on startup",
          "type": "boolean"
        },
        "obsidianMagic.ui.showTagsInExplorer": {
          "default": true,
          "description": "Show tags in file explorer",
          "type": "boolean"
        },
        "obsidianMagic.ui.enableTagHighlighting": {
          "default": true,
          "description": "Enable syntax highlighting for tags",
          "type": "boolean"
        },
        "obsidianMagic.ui.tagDecorationStyle": {
          "default": "background",
          "description": "Style for tag decorations",
          "enum": [
            "background",
            "underline",
            "outline"
          ],
          "type": "string"
        },
        "obsidianMagic.integration.enableCodeLens": {
          "default": true,
          "description": "Enable code lens for tags",
          "type": "boolean"
        },
        "obsidianMagic.integration.enableAutotagging": {
          "default": false,
          "description": "Enable automatic tagging of files",
          "type": "boolean"
        },
        "obsidianMagic.advanced.logLevel": {
          "default": "info",
          "description": "Log level for debugging",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "type": "string"
        }
      },
      "title": "Magus Mark for VSCode"
    },
    "keybindings": [
      {
        "command": "magus-mark.tagFile",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "magus-mark.openTagExplorer",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "magus-mark.searchTags",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "magus-mark.tagFile",
          "group": "magus-mark",
          "when": "resourceExtname == .md"
        }
      ],
      "explorer/context": [
        {
          "command": "magus-mark.tagFile",
          "group": "magus-mark",
          "when": "resourceExtname == .md"
        }
      ],
      "view/item/context": [
        {
          "command": "magus-mark.deleteTag",
          "group": "inline",
          "when": "view == obsidianMagicTagExplorer && viewItem == tag"
        }
      ],
      "view/title": [
        {
          "command": "magus-mark.addTag",
          "group": "navigation",
          "when": "view == obsidianMagicTagExplorer"
        },
        {
          "command": "magus-mark.searchTags",
          "group": "navigation",
          "when": "view == obsidianMagicTagExplorer"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "obsidianMagicTagExplorer",
          "name": "Magus Mark Tags",
          "when": "obsidianMagic.hasVaults"
        }
      ],
      "magus-mark": [
        {
          "id": "magusMarkVaultBrowser",
          "name": "Vault Browser",
          "when": "obsidianMagic.hasVaults"
        },
        {
          "id": "magusMarkRecentActivity",
          "name": "Recent Activity",
          "when": "obsidianMagic.hasVaults"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "magus-mark",
          "title": "Magus Mark",
          "icon": "$(tag)"
        }
      ]
    }
  },
  "dependencies": {
    "@magus-mark/core": "workspace:*",
    "ws": "^8.18.2"
  },
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "devDependencies": {
    "@magus-mark/eslint-config": "workspace:*",
    "@magus-mark/typescript-config": "workspace:*",
    "@types/chai": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.18",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.96.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.3.2",
    "chai": "^5.2.0",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "glob": "11.0.2",
    "mocha": "11.2.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "typescript": "5.8.3"
  },
  "displayName": "Magus Mark",
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./dist/extension.cjs",
  "name": "magus-mark-vscode",
  "private": true,
  "publisher": "khallmark",
  "repository": {
    "type": "git",
    "url": "https://github.com/khallmark/magus-mark.git"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.config.ts",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src",
    "package": "pnpm run check-types && pnpm run lint && tsx esbuild.config.ts --production",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test:vscode": "vscode-test --config .vscode-test.cjs",
    "vscode:prepublish": "pnpm run package"
  },
  "type": "module",
  "version": "0.1.0"
}
