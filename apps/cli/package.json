    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.5.2",
    "ora": "^8.2.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/yargs": "^17.0.33",
