{
  "name": "@obsidian-magic/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tag-conversations": "./bin/tag-conversations.js"
  },
  "scripts": {
    "prebuild": "node scripts/build.js",
    "build": "tsc -b",
