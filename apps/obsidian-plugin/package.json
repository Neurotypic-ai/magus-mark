{
  "author": "Kevin Hallmark <obsdian-magic@littleblackhat.com>",
  "dependencies": {
    "@codemirror/language": "^6.11.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@obsidian-magic/core": "workspace:*"
  },
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.1",
    "@eslint/js": "^9.25.0",
    "@eslint/markdown": "^6.4.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@typescript-eslint/utils": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "axe-core": "^4.10.3",
    "codemirror": "^6.0.1",
    "ejs": "^3.1.10",
    "electron": "^35.2.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import-x": "^4.10.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "jsdom": "^26.1.0",
    "moment": "^2.30.1",
    "obsidian": "^1.8.7",
    "playwright": "^1.52.0",
    "puppeteer": "^24.6.1",
    "source-map": "^0.7.4",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.1"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "ai",
    "tagging",
    "chatgpt"
  ],
  "license": "MIT",
  "main": "dist/main.js",
  "name": "obsidian-magic",
  "peerDependencies": {
    "obsidian": "^1.8.7"
  },
  "private": true,
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/main.js",
    "bundle-analysis": "node .github/scripts/analyze-bundle.js",
    "check-accessibility": "node .github/scripts/check-accessibility.js",
    "clean": "rm -rf dist",
    "dev": "esbuild src/main.ts --bundle --outfile=dist/main.js --watch",
    "format": "prettier --write 'src/**/*.{ts,js,json,css}' 'tests/**/*.{ts,js}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "pnpm run build && mkdir -p release && cp -r dist manifest.json styles.css release/",
    "prebuild": "pnpm run lint && pnpm run typecheck",
    "prerelease": "pnpm run test && pnpm run check-accessibility",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "watch": "node esbuild.config.js --watch"
  },
  "type": "module",
  "version": "0.1.0"
}
