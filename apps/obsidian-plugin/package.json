{
  "name": "obsidian-magic",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "tsc -b --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,js,json,css}' 'tests/**/*.{ts,js}'",
    "typecheck": "tsc --noEmit",
    "check-accessibility": "node .github/scripts/check-accessibility.js",
    "bundle-analysis": "node .github/scripts/analyze-bundle.js",
    "prebuild": "npm run lint && npm run typecheck",
    "package": "npm run build && mkdir -p release && cp -r dist manifest.json styles.css release/",
    "prerelease": "npm run test && npm run check-accessibility"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "ai",
    "tagging",
    "chatgpt"
  ],
  "author": "Obsidian Magic Team",
  "license": "MIT",
  "dependencies": {
    "@codemirror/language": "^6.11.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@obsidian-magic/core": "workspace:*",
    "@obsidian-magic/types": "workspace:*",
    "@obsidian-magic/utils": "workspace:*"
  },
  "peerDependencies": {
    "obsidian": "^1.5.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.1",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "obsidian": "^1.8.7",
    "prettier": "^3.5.3",
    "puppeteer": "^24.6.1",
    "rimraf": "^6.0.1",
    "source-map-explorer": "^2.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
