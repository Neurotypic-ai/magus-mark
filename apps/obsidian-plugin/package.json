{
  "name": "obsidian-magic",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "dev": "tsc -b --watch",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "package": "npm run build && mkdir -p release && cp -r dist manifest.json styles.css release/"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "ai",
    "tagging",
    "chatgpt"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@codemirror/language": "^6.11.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@obsidian-magic/core": "workspace:*",
    "@obsidian-magic/types": "workspace:*",
    "@obsidian-magic/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "obsidian": "^1.8.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
