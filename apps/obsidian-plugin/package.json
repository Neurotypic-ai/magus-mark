{
  "author": "Kevin Hallmark <obsdian-magic@littleblackhat.com>",
  "dependencies": {
    "@codemirror/language": "^6.11.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@obsidian-magic/core": "workspace:*"
  },
  "description": "AI-powered tagging system for organizing AI chat history in Obsidian",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.25.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-polyfill-node": "^0.6.0",
    "esbuild-register": "^3.5.1",
    "eslint": "^9.25.1",
    "eslint-config-custom": "workspace:*",
    "jsdom": "^25.0.0",
    "obsidian": "^1.7.5",
    "ts-jest": "^29.2.4",
    "tsconfig-custom": "workspace:*",
    "tslib": "^2.7.0",
    "typescript": "5.8.3",
    "vitest": "^3.1.2"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "ai",
    "tagging",
    "chatgpt"
  ],
  "license": "MIT",
  "main": "dist/main.js",
  "name": "obsidian-magic",
  "peerDependencies": {
    "obsidian": "^1.8.7"
  },
  "private": true,
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/main.js",
    "bundle-analysis": "node .github/scripts/analyze-bundle.js",
    "check-accessibility": "node .github/scripts/check-accessibility.js",
    "clean": "rm -rf dist",
    "dev": "esbuild src/main.ts --bundle --outfile=dist/main.js --watch",
    "format": "prettier --write 'src/**/*.{ts,js,json,css}' 'tests/**/*.{ts,js}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "pnpm run build && mkdir -p release && cp -r dist manifest.json styles.css release/",
    "prebuild": "pnpm run lint && pnpm run typecheck",
    "prerelease": "pnpm run test && pnpm run check-accessibility",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "watch": "node esbuild.config.js --watch"
  },
  "type": "module",
  "version": "0.1.0"
}
